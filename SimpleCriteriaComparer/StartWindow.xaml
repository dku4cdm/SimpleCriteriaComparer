        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="#FF494949" Offset="0.263"/>
            <GradientStop Color="#FF3E3C3C" Offset="0.527"/>
            <GradientStop Color="#FF7C7C7C" Offset="0.8"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock Name="startTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="20" Margin="51,20,51,222"></TextBlock>
        <TextBlock Name="name" TextWrapping="Wrap" HorizontalAlignment="Center"  TextAlignment="Center" FontFamily="Arial Black" FontSize="76" Margin="99,126,112,164" Width="245">
