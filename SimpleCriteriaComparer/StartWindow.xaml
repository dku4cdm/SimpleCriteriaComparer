                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFFBABAB" Offset="1"/>
                    <GradientStop Color="#FFFBABAB"/>
                    <GradientStop Color="#FFDA4848" Offset="0.673"/>
                    <GradientStop Color="#FFF00D0D" Offset="0.493"/>
                    <GradientStop Color="#FFD84949" Offset="0.33"/>
                    <GradientStop Color="#FFF07676" Offset="0.817"/>
                    <GradientStop Color="#FFF07676" Offset="0.163"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>ТеГР</TextBlock>
        <Button x:Name="startBtn" Content="Почати" HorizontalAlignment="Left" Margin="149,289,0,0" VerticalAlignment="Top" Width="158" Background="#FF3E3C3C" BorderBrush="#FF3E3C3C" Foreground="#FF45B45E" BorderThickness="0" FontFamily="Arial Black" FontSize="20" Height="74" Click="startBtn_Click"/>
